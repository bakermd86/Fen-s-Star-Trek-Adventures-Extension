<root>
  <windowclass name="episode_scene">
    <script>
        function onInit()
            self.setBackColor(ColorHandler.getMainColor(parentcontrol.window.getDatabaseNode()))
            ColorHandler.registerColorFrame(self, parentcontrol.window.getDatabaseNode())
        end
    </script>
    <sheetdata>
        <ship_tl_anchor/>
        <charsheet_tr_anchor/>

            <genericcontrol name="description_color">
                <anchored merge="replace" >
                    <top parent="topLeft" />
                    <right />
                    <left />
                    <bottom parent="" anchor="center"/>
                </anchored>
                <frame name="lcars_frame_shape_top" />
            </genericcontrol>

            <notes_field name="description">
                <anchored merge="replace" to="description_color">
                    <left offset="40"/>
                    <top offset="25"/>
                    <right offset="-40"/>
                    <bottom offset="-10"/>
                </anchored>
            </notes_field>
            <tag_label >
                <anchored to="description" />
                <static> SCENE DESCRIPTION </static>
            </tag_label>

            <genericcontrol name="scene_characters_color">
                <anchored to="description_color" merge="replace" >
                    <top anchor="bottom"/>
                    <right anchor="center"/>
                    <left />
                    <bottom parent=""/>
                </anchored>
                <frame name="lcars_frame_shape_bottom_left" />
            </genericcontrol>
            <char_linked_list name="scene_characters">
                <datasource>.scene_characters</datasource>
                <anchored to="scene_characters_color">
                    <top offset="5"/>
                    <left offset="35"/>
                    <right offset="-5"/>
                    <bottom offset="-25"/>
                </anchored>
                <frame merge="delete"/>
            </char_linked_list>
            <tag_label >
                <anchored to="scene_characters" position="insidebottomleft" offset="25,-25"/>
                <static> SCENE CHARACTERS </static>
            </tag_label>

            <genericcontrol name="scene_active_traits_color">
                <anchored to="description_color" merge="replace" >
                    <top anchor="bottom"/>
                    <right />
                    <left anchor="center"/>
                    <bottom parent=""/>
                </anchored>
                <frame name="lcars_frame_shape_bottom_right" />
            </genericcontrol>
            <char_ref_list name="scene_active_traits">
                <datasource>.scene_active_traits</datasource>
                <anchored to="scene_active_traits_color">
                    <top offset="5"/>
                    <left offset="5"/>
                    <right offset="-35"/>
                    <bottom offset="-25"/>
                </anchored>
                <frame merge="delete"/>
            </char_ref_list>
            <tag_label >
                <anchored to="scene_active_traits" position="insidebottomright" offset="25,-25"/>
                <static> SCENE TRAITS </static>
            </tag_label>



