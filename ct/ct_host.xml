<root>
	<windowclass name="combattracker_host" merge="join">
		<script file="ct/scripts/ct_host.lua"/>
        <sheetdata merge="join">
			<anchor_title_ctbox name="contentanchor" >
                <anchored >
                    <top offset="15"/>
                    <left offset="40"/>
                    <right offset="-40"/>
                </anchored>
            </anchor_title_ctbox>
			<select_ct_nextactor/>
        </sheetdata>
    </windowclass>

	<template name="button_ct_menu">
		<buttoncontrol>
            <anchored to="headeranchor" position="aboveleft" height="24" width="24" offset="-5,20"/>
			<icon normal="button_menu" pressed="button_menu_down" hover="button_menu_hover"/>
			<tooltip textres="ct_tooltip_menu" />
			<script file="ct/scripts/ct_menu.lua" />
		</buttoncontrol>
	</template>

	<template name="help_ctbox">
		<help>
			<anchored>
				<top offset="11" />
				<right offset="-60" />
			</anchored>
		</help>
	</template>

	<template name="close_ctbox">
		<close>
			<anchored>
				<top offset="11" />
				<right offset="-35" />
			</anchored>
		</close>
	</template>


	<template name="select_ct_nextactor">
		<comboboxc name="select_nextactor">
			<anchored width="100" height="0">
				<bottom offset="-19" />
				<left parent="contentanchor" offset="72" />
			</anchored>
			<script>
				function onFirstLayout()
					setComboBoxReadOnly(true)
				end
			</script>
		</comboboxc>
	</template>

	<template name="button_ct_nextactor">
		<buttoncontrol>
			<anchored width="33" height="26">
				<bottom offset="-19" />
				<left parent="contentanchor" offset="35" />
			</anchored>
			<icon normal="button_ctnextactor" pressed="button_ctnextactor_down" />
			<tooltip textres="ct_tooltip_nextactor" />
			<script file="ct/scripts/ct_nextactor.lua" />
		</buttoncontrol>
	</template>

	<windowclass name="ct_entry" merge="join">
		<sheetdata>
			<number_ctentry_initresult name="initresult" >
				<readonly />
			</number_ctentry_initresult>
			<numberfield name="acted_order">
				<anchored position="insidetopleft" width="0" height="0" />
				<invisible />
				<default>0</default>
			</numberfield>
		</sheetdata>
	</windowclass>
</root>