            function onInit()
                if DB.getValue(getDatabaseNode(), "source", "") == "" then
                    DB.setValue(getDatabaseNode(), "source", "string", DB.getValue(".crew_support.episode_name"))
                end
            end
        </script>
        <sheetdata>
