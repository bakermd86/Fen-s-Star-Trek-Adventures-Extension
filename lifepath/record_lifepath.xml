			</lifepath_tab_button>

			<lifepath_tab_button name="lifepath_careertab" >
				<state textres="lifepath_careertab_label" />
				<tabnum>5</tabnum>
			</lifepath_tab_button>

			<lifepath_tab_button name="lifepath_career_eventtab" >
